generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DayOfWeek {
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
  sunday
}

model WeeklySchedule {
  id        String     @id @default(uuid())
  venue     Venue      @relation("VenueSchedule", fields: [venueId], references: [id], onDelete: Cascade)
  venueId   String
  day       DayOfWeek
  startTime String
  endTime   String

  @@index([venueId, day])
}

model Venue {
  id             String            @id @default(uuid())
  name           String
  street         String
  postalCode     String
  city           String
  country        String
  weeklySchedule WeeklySchedule[] @relation("VenueSchedule")
}
